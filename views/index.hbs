
<form action="/" method="post">
    <div class="wrapper">
        <h1>Account Login</h1>

        <input class="form-control mt-3" type="email" name="email" id="email" placeholder="email" required>
        <input class="form-control mt-3" type="password" name="password" id="password" placeholder="password" required>
        <button class="btn btn-light mt-4" type="submit">Sign in</button>


        {{#if inactivated}}
        
        <h3 class="mt-3">錯誤的使用者帳號或密碼，請重新輸入</h3>

        {{/if}}
    </div>
</form>


<style>
    .wrapper {
        width: 60%;
        margin: 5% auto;

        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .wrapper input, .wrapper button {
        max-width: 400px;
        height: 50px;

        border: 2px solid #222222;

        font-size: 1.2rem;
        vertical-align: middle;
    }

    h3 {
        color: red;
    }

</style>